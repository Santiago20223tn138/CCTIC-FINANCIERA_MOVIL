<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.client.RegisterClientActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/new_client" />

        <TextView
            android:id="@+id/tvRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Registrar cliente"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custome_edit_text"
            android:hint="Nombre(s)"
            android:inputType="text"
            android:paddingHorizontal="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Paterno"
                android:inputType="text"
                android:paddingHorizontal="20dp" />

            <EditText
                android:id="@+id/etSurName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Materno"
                android:inputType="text"
                android:paddingHorizontal="20dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custome_edit_text"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTel1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Teléfono 1"
                android:inputType="phone"
                android:paddingHorizontal="20dp" />

            <EditText
                android:id="@+id/etTel2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Teléfono 2"
                android:inputType="phone"
                android:paddingHorizontal="20dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etIngresoSem"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Ingreso Semanal"
                android:inputType="numberDecimal"
                android:paddingHorizontal="20dp" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custome_edit_text"
                android:hint="Edad"
                android:inputType="number"
                android:paddingHorizontal="20dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custome_edit_text"
            android:hint="Dirección domicilio"
            android:inputType="textPostalAddress"
            android:paddingHorizontal="20dp" />

        <EditText
            android:id="@+id/etAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custome_edit_text"
            android:hint="Detalle domicilio"
            android:inputType="textMultiLine"
            android:paddingHorizontal="20dp" />

        <Button
            android:id="@+id/btnRegisterClient"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Siguiente"
            android:textColor="@color/main"
            android:textSize="20sp"
            app:cornerRadius="80dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>