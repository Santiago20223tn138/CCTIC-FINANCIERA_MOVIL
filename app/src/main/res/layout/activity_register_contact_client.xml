<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    tools:context=".ui.client.RegisterContactClientActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/new_reference_client" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Registrar referencia"
        android:textAlignment="center"
        android:textColor="@color/main"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNameReference"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custome_edit_text"
        android:hint="Nombre(s)"
        android:inputType="text"
        android:paddingHorizontal="20dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTel1Reference"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/custome_edit_text"
            android:hint="Teléfono 1"
            android:inputType="phone"
            android:paddingHorizontal="20dp" />

        <EditText
            android:id="@+id/etTel2Reference"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/custome_edit_text"
            android:hint="Teléfono 2"
            android:inputType="phone"
            android:paddingHorizontal="20dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etRelation"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/custome_edit_text"
            android:hint="Parentezco"
            android:inputType="text"
            android:paddingHorizontal="20dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btnRegisterClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/main"
        android:text="Registrar"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="80dp" />


</androidx.appcompat.widget.LinearLayoutCompat>